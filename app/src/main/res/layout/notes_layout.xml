<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/notecard"
        android:layout_width="200dp"
        android:layout_height="225dp"

        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="5dp">


        <LinearLayout
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/notepad_background1_edited"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/notetitle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="This is your Developer"
                    android:textColor="@color/black"
                    android:textSize="30sp">


                </TextView>

                <ImageView
                    android:id="@+id/menupopbutton"
                    android:layout_width="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_baseline_more_vert_24"></ImageView>


            </LinearLayout>

            <TextView
                android:id="@+id/notecontent"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:text="This is your code which appear here"
                android:textColor="@color/black"
                android:textSize="20sp">

            </TextView>

<!--            <TextView-->
<!--                android:id="@+id/editedLabel"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="10dp"-->
<!--                android:paddingLeft="30dp"-->
<!--                android:hint="[ Editted ]" />-->

            <TextView
                android:id="@+id/datetime"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="15.5dp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>