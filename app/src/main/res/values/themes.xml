<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApptutorial" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style
        name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="Theme.Forgotpwd" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>
    <style name="Theme.Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>
    <style name="Theme.Memo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/lightblue</item>
    </style>


</resources>